<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Copara.Views.LoginPage">
	<ContentPage.Content>

        <ScrollView>
        <StackLayout BackgroundColor="#171717">
                <Image Source="logo.png" Margin="0, 10, 0, 0"/>

            <StackLayout x:Name="LoginEntriesStack" Margin="30,0,30,0" VerticalOptions="StartAndExpand" BackgroundColor="#171717">
                <Label Text="Email" TextColor="#ACACAC"/>
                <Entry x:Name="Entry_Email" HeightRequest="30"/>
                <Label Text="Password" TextColor="#ACACAC"/>
                <Entry x:Name="Entry_Password" HeightRequest="30"/>
                <Button x:Name="Btn_Login" BackgroundColor="#50ADE6" TextColor="White" Text="Login" Clicked="Login" Margin="0, 10, 0, 0"/>
            </StackLayout>
        </StackLayout>
        </ScrollView>
            
	</ContentPage.Content>
</ContentPage>
